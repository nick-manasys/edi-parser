form: COPYBOOK
segments: 
- id: 'CR0'
  name: 'CUSTOMER-RECORD'
  values: 
  - { name: 'TYPE-OF-NAME', type: AN, length: 1 }
  - name: 'CUSTOMER-NAME'
    values: 
    - { name: 'LAST-NAME', position: 3, type: AN, length: 15 }
    - { name: 'FIRST-NAME', position: 4, type: AN, length: 8 }
- id: 'IR0'
  name: 'INVENTORY-RECORD'
  values: 
  - name: 'INVENTORY-ITEM'
    values: 
    - { name: 'ITEM-DESCRIPTION', type: AN, length: 30 }
    - name: 'MONTHLY-SALES'
      values: 
      - { name: 'QUANTITY-SOLD', type: N, length: 3 }
      - { name: 'UNIT-PRICE', type: N2, length: 7 }
- id: 'MR0'
  name: 'MAILING-RECORD'
  values: 
  - { name: 'COMPANY-NAME', type: AN, length: 30 }
  - name: 'CONTACTS'
    values: 
    - name: 'PRESIDENT'
      position: 3
      values: 
      - { name: 'LAST-NAME', position: 4, type: AN, length: 15 }
      - { name: 'FIRST-NAME', position: 5, type: AN, length: 8 }
    - name: 'VP-MARKETING'
      position: 4
      values: 
      - { name: 'LAST-NAME', position: 5, type: AN, length: 15 }
      - { name: 'FIRST-NAME', position: 6, type: AN, length: 8 }
    - name: 'ALTERNATE-CONTACT'
      position: 5
      values: 
      - { name: 'TITLE', position: 6, type: AN, length: 10 }
      - { name: 'LAST-NAME', position: 7, type: AN, length: 15 }
      - { name: 'FIRST-NAME', position: 8, type: AN, length: 8 }
  - { name: 'ADDRESS', type: AN, length: 15 }
  - { name: 'CITY', type: AN, length: 15 }
  - { name: 'STATE', type: AN, length: 2 }
  - { name: 'ZIP', type: N, length: 5 }
